<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itaccess.interphone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- skyway　SDKの機能を利用 start -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- skyway　SDKの機能を利用 end -->

    <!-- volume　設定権限 -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".MainApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- メイン画面 -->
        <activity android:name=".ui.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login画面 -->
        <activity android:name=".ui.activity.LoginActivity"
            android:screenOrientation="portrait" />

        <!-- 利用規約画面 -->
        <activity android:name=".ui.activity.TermOfUseActivity"
            android:screenOrientation="portrait"/>

        <!-- ペアリンク画面 -->
        <activity android:name=".ui.activity.PairLinkActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.CaptureActivity"
            android:screenOrientation="portrait"/>

        <!-- WebView -->
        <activity android:name=".ui.activity.WebActivity"
            android:screenOrientation="portrait"/>

        <!-- 設定画面 -->
        <activity android:name=".ui.activity.SettingActivity"
            android:screenOrientation="portrait" />

        <!-- 通話設定 -->
        <activity android:name=".ui.activity.CallSetttingActivity"
            android:screenOrientation="portrait" />

        <!-- ニックネーム変更 -->
        <activity android:name=".ui.activity.NicknameActivity"
            android:screenOrientation="portrait" />

        <!-- パスワード変更 -->
        <activity android:name=".ui.activity.PasswordChangeActivity"
            android:screenOrientation="portrait" />

        <!-- 自動応答設定 -->
        <activity android:name=".ui.activity.AutoResponseActivity"
            android:screenOrientation="portrait" />

        <!-- お知らせ一覧 -->
        <activity android:name=".ui.activity.NoticeListActivity"
            android:screenOrientation="portrait" />

        <!-- 着信画面 -->
        <activity android:name=".ui.activity.ReceivingActivity"
            android:screenOrientation="portrait" />

        <!-- アプリについて -->
        <activity android:name=".ui.activity.AboutActivity"
            android:screenOrientation="portrait" />

        <!-- 問い合わせ -->
        <activity android:name=".ui.activity.InquiryActivity"
            android:screenOrientation="portrait" />


        <!-- サーバーへトークン -->
        <service android:name=".service.RegistrationIntentService" />
        <!-- サーバーからプッシュ通知を受けるサービス -->
        <service android:name=".service.FirebaseMessagingService" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.FirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".service.RegistrationIntentService"/>

    </application>

</manifest>