<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Common_MainText">
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textSize">@dimen/text_size_x_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Common_ContentText">
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- Login -->
    <style name="LoginEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_edittext_height</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_32dp</item>
        <item name="android:layout_marginRight">@dimen/margin_horizontal_32dp</item>
        <item name="android:paddingLeft">@dimen/login_edittext_padding_left</item>
        <item name="android:paddingRight">@dimen/login_edittext_padding_left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/edittext_into</item>
    </style>

    <style name="LoginBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_24dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_48dp</item>
        <item name="android:layout_marginRight">@dimen/margin_horizontal_48dp</item>
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="NicknameBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--自動応答設定 -->
    <style name="AutoResponseTxt">
        <item name="android:layout_width">@dimen/auto_response_content_txt_width</item>
        <item name="android:layout_height">@dimen/auto_response_content_txt_height</item>
        <item name="android:background">@drawable/auto_response_text</item>
        <item name="android:textSize">@dimen/text_size_x_medium</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_8dp</item>
        <item name="android:padding">@dimen/margin_horizontal_12dp</item>
    </style>

    <style name="WebviewNetworkError">
        <item name="android:lineSpacingExtra">@dimen/webview_network_error_spacing</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- アプリについて -->
    <style name="About_TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_5dp</item>
    </style>

    <style name="About_ContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textSize">@dimen/text_size_x_small</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_8dp</item>
        <item name="android:alpha">0.7</item>
    </style>

</resources>
