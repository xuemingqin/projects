<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/margin_vertical_8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/talk_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vertical_8dp"
            android:src="@drawable/receiving_call" />

        <TextView
            android:id="@+id/talk_image_txt"
            style="@style/Common_ContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/receiving_title_talk_txt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/margin_vertical_8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/auto_answer_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vertical_8dp"
            android:src="@drawable/receiving_auto_answer" />

        <TextView
            android:id="@+id/auto_answer_image_txt"
            style="@style/Common_ContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/receiving_title_auto_txt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/margin_vertical_8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/end_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vertical_8dp"
            android:src="@drawable/receiving_end" />

        <TextView
            android:id="@+id/end_image_txt"
            style="@style/Common_ContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/receiving_title_end_txt" />

    </LinearLayout>

</LinearLayout>