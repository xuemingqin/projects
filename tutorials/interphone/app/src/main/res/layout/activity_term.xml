<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <ScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:layout_above="@+id/term_footerLayout"
        android:background="@color/common_background">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal_32dp"
            android:layout_marginRight="@dimen/margin_horizontal_32dp"
            android:background="@color/common_background"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_vertical_36dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/term_app_policy_detail"
                android:layout_marginTop="@dimen/margin_vertical_16dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xx_small"
                android:textColor="@color/common_black"
                android:lineSpacingExtra="@dimen/term_line_spacing_extra"
                android:text="@string/app_term_privacy_policy_detail"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/term_footerLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/term_footer_layout_height"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:background="@drawable/term_footer_background"
        android:orientation="vertical">

        <include android:id="@+id/checkbox_normal"
            layout="@layout/term_normal"/>

        <RelativeLayout
            android:id="@+id/term_button_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/term_footer_button_height"
            android:layout_marginBottom="@dimen/margin_vertical_16dp">

            <Button
                android:id="@+id/agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_horizontal_48dp"
                android:layout_marginRight="@dimen/margin_horizontal_48dp"
                android:enabled="false"
                android:background="@drawable/btn_login"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="@string/term_button_title"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
