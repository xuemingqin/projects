<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ringtone_recycler_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_black"
        android:layout_marginVertical="@dimen/margin_vertical_8dp"
        android:layout_marginLeft="@dimen/margin_horizontal_8dp"
        android:textSize="@dimen/text_size_x_medium"
        android:text="" />

    <RadioButton
        android:id="@+id/ringtone_recycler_radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_horizontal_8dp"
        android:text="" />


</RelativeLayout>