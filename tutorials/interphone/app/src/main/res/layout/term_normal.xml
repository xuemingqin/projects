<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkbox_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_vertical_32dp"
    android:layout_marginLeft="@dimen/margin_horizontal_48dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/check_box"
        android:layout_width="@dimen/checkbox_size"
        android:layout_height="@dimen/checkbox_size"
        android:src="@drawable/unchecked" />

    <TextView
        android:id="@+id/conform_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_horizontal_8dp"
        android:textSize="@dimen/text_size_x_small"
        android:enabled="false"
        android:text="全文を確認しました" />

</LinearLayout>