<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notice_list_time_1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            style="@style/Common_ContentText"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_horizontal_8dp"
            android:layout_marginVertical="@dimen/margin_vertical_8dp"
            android:text="2017/05/25" />

        <TextView
            android:id="@+id/notice_list_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            style="@style/Common_MainText"
            android:layout_weight="2"
            android:layout_marginVertical="@dimen/margin_vertical_8dp"
            android:text="システムメンテナンス" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notice_list_time_2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            style="@style/Common_ContentText"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_horizontal_8dp"
            android:layout_marginVertical="@dimen/margin_vertical_8dp"
            android:text="2017/05/25" />

        <TextView
            android:id="@+id/notice_list_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            style="@style/Common_ContentText"
            android:layout_weight="3"
            android:layout_marginVertical="@dimen/margin_vertical_8dp"
            android:autoLink="all"
            android:text="08:00-09:00システムメンテナンスの為、利用できません" />

    </LinearLayout>



</LinearLayout>