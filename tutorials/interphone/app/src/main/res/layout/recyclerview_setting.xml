<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_recyclerview_height"
    android:background="@color/setting_recycler_item_background_color">

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_horizontal_5dp"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/common_black"
        android:text="TextView" />

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_horizontal_5dp"
        app:srcCompat="@drawable/icon_right" />

</RelativeLayout>