<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/call_setting_recycler_img"
        android:layout_width="@dimen/call_setting_imageview_size"
        android:layout_height="@dimen/call_setting_imageview_size"
        android:layout_marginVertical="@dimen/margin_vertical_8dp"
        app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/call_setting_list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/margin_vertical_8dp"
        style="@style/Common_ContentText"
        android:text="" />

</LinearLayout>