<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="@dimen/margin_vertical_48dp"
    >

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="220dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:src="@drawable/icon_tutorial_3"
            android:layout_centerInParent="true"
            android:id="@+id/iv01"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_page_3_large_message_tab"
            android:gravity="center"
            android:layout_marginTop="42dp"
            android:textFontWeight="3"
            android:id="@+id/tv01"
            android:lineSpacingExtra="24dp"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_page_3_message"
            android:gravity="left"
            android:layout_marginTop="24dp"
            android:textFontWeight="3"
            android:lineSpacingExtra="20dp"
            android:id="@+id/tv02"

            android:textSize="14dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical_79dp"
        >

        <Button
            android:id="@+id/tutorial_3_mydocomo_btn"
            android:layout_width="@dimen/tutorial_3_button_width"
            android:layout_height="@dimen/tutorial_3_button_button_height"
            android:text="@string/tutorial_start"
            />

    </RelativeLayout>

</LinearLayout>