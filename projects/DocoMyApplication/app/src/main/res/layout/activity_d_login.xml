<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_margin="8dp"
        android:clickable="true"
        android:id="@+id/iv_reback"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dアカウントログイン"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/tvkisoku"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/common_gray"
        android:layout_below="@+id/tvkisoku"
        android:layout_marginTop="15dp">

    </View>
    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:hint="アカウントID"
            android:textColorHint="#a2c699">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/myid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#9966cc"
                android:singleLine="true"
                />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:hint="パスワード"
                android:textColorHint="#a2c699">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9966cc"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_see"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/icon_display"
                android:layout_marginBottom="4dp"
                android:textSize="5sp"
                android:layout_gravity="bottom"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            >
            <CheckBox
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="5dp"
                android:id="@+id/checkbox1"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textFontWeight="3"
                android:text="パスワードを保存する"
                android:gravity="left|center"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:text="ログインする"
            android:textColor="#ffff"
            android:background="@drawable/button"
            android:id="@+id/login"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID・パスワードをお忘れの場合"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:id="@+id/idpass"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="24dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="dアカウントとは？"
                android:gravity="left"
                android:textFontWeight="3"
                android:textSize="14sp"
                android:textColor="#0070C9"
                android:id="@+id/tvdtowa"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="ご注意事項"
                android:gravity="right"
                android:textFontWeight="3"
                android:textSize="14sp"
                android:textColor="#0070C9"
                android:layout_toRightOf="@+id/tvdtowa"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                />
        </LinearLayout>

    </LinearLayout>

    <!--<WebView-->
        <!--android:id="@+id/webview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="gone"-->
        <!--&gt;-->

    <!--</WebView>-->

</RelativeLayout>

