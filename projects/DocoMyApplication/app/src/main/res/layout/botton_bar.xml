<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="234dp"
    android:layout_marginTop="@dimen/margin_horizontal_32dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/icon_tutorial_pass_lock_mess"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/margin_horizontal_4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_passcode_num_1"
                android:id="@+id/num1"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/icon_passcode_num_2"
                android:layout_height="wrap_content"
                android:id="@+id/num2"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_passcode_num_3"
                android:id="@+id/num3"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/margin_horizontal_4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_passcode_num_4"
                android:id="@+id/num4"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/icon_passcode_num_5"
                android:layout_height="wrap_content"
                android:id="@+id/num5"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_passcode_num_6"
                android:id="@+id/num6"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/margin_horizontal_4dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_passcode_num_7"
                android:id="@+id/num7"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/icon_passcode_num_8"
                android:layout_height="wrap_content"
                android:id="@+id/num8"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_passcode_num_9"
                android:id="@+id/num9"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/margin_horizontal_4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_passcode_num_0"
                android:id="@+id/num0"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>