<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二段階認証"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:id="@+id/tv2kai"
        />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvkisoku1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="32dp"
            android:lineSpacingExtra="18dp"
            android:text="セキュリティコードを入力してください"
            android:textColor="#ff0000"
            android:textFontWeight="3"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="32dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content7"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="36dp"
            android:textSize="12sp"
            android:textFontWeight="3"
            android:layout_marginRight="32dp"
            />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="セキュリティコード"
              android:layout_marginTop="44dp"
              android:layout_marginRight="32dp"
              android:layout_marginLeft="32dp"
              android:textSize="12sp"
              android:textFontWeight="3"
              android:textColor="#757575"
              />
          <EditText
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginRight="32dp"
              android:layout_marginLeft="32dp"
              android:layout_marginTop="8dp"
              android:padding="8dp"


              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="16dp"
             >
          <CheckBox
              android:layout_width="32dp"
              android:layout_height="32dp"
              android:layout_marginRight="5dp"
              android:layout_marginLeft="32dp"

              />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:textSize="12sp"
                  android:textFontWeight="3"
                  android:text="@string/content8"

                  />
          </LinearLayout>
          <Button
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginRight="32dp"
              android:layout_marginLeft="32dp"
              android:layout_marginTop="28dp"
              android:text="OK"
              android:textColor="#ffff"
              android:background="#0070C9"
              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="二段階認証とは?"
              android:layout_marginRight="32dp"
              android:layout_marginLeft="32dp"
              android:layout_marginTop="44dp"
              android:gravity="center"
              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="セキュリティコート届かない方"
              android:layout_marginRight="32dp"
              android:layout_marginLeft="32dp"
              android:layout_marginTop="32dp"
              android:gravity="center"
              android:textFontWeight="3"
              android:textSize="14sp"
              android:textColor="#0070C9"

              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/content9"
              android:layout_marginLeft="32dp"
              android:layout_marginTop="44dp"
              android:textSize="12sp"
              android:textFontWeight="3"
              android:layout_marginRight="32dp">

          </TextView>
    </LinearLayout>
</RelativeLayout>